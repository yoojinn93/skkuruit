<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                //공고 기본 정보
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/event_box"
                    android:padding="10dp">
                    <TextView
                        android:id="@+id/spEventTitle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textSize="17dp"
                        android:textColor="@color/mainColor"
                        android:textStyle="bold"
                        android:text="" />
                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_weight="5"
                        app:srcCompat="@drawable/unstar" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/event_box"
                    android:padding="0dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:padding="12dp"
                        android:layout_marginLeft="1.5dp"
                        android:layout_marginBottom="1.5dp"
                        android:textSize="15dp"
                        android:textColor="@color/mainColor"
                        android:background="@drawable/gray_box"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="회사명"/>
                    <TextView
                        android:id="@+id/spEventCompany"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="12dp"
                        android:layout_marginRight="1.5dp"
                        android:layout_marginBottom="1.5dp"
                        android:textSize="15dp"
                        android:textColor="@color/mainColor"
                        android:background="@drawable/white_box"
                        android:gravity="center_vertical"
                        android:text=""/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/event_box"
                    android:padding="0dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:padding="12dp"
                        android:layout_marginLeft="1.5dp"
                        android:layout_marginBottom="1.5dp"
                        android:textSize="15dp"
                        android:textColor="@color/mainColor"
                        android:background="@drawable/gray_box"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="산업군"/>

                    <TextView
                        android:id="@+id/spEventCate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="12dp"
                        android:layout_marginRight="1.5dp"
                        android:layout_marginBottom="1.5dp"
                        android:textSize="15dp"
                        android:textColor="@color/mainColor"
                        android:background="@drawable/white_box"
                        android:gravity="center_vertical"
                        android:text=""/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/event_box"
                    android:padding="0dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:padding="12dp"
                        android:layout_marginLeft="1.5dp"
                        android:layout_marginBottom="1.5dp"
                        android:textSize="15dp"
                        android:textColor="@color/mainColor"
                        android:background="@drawable/gray_box"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="장소 및 일시"/>
                    <TextView
                        android:id="@+id/spEventInfo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="12dp"
                        android:layout_marginRight="1.5dp"
                        android:layout_marginBottom="1.5dp"
                        android:textSize="15dp"
                        android:textColor="@color/mainColor"
                        android:background="@drawable/white_box"
                        android:gravity="center_vertical"
                        android:text="" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/event_box"
                    android:padding="0dp">
                    <TextView
                        android:id="@+id/spEventContent"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="12dp"
                        android:layout_marginLeft="1.5dp"
                        android:layout_marginRight="1.5dp"
                        android:layout_marginBottom="1.5dp"
                        android:textSize="15dp"
                        android:textColor="@color/mainColor"
                        android:background="@drawable/white_box"
                        android:gravity="center_vertical"
                        android:text="" />
                </LinearLayout>

                //준비하세요
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/title_fav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="준비하세요"
                        android:textSize="17dp"
                        android:textColor="@color/mainColor"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/event_box"
                    android:padding="0dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp"
                        android:layout_margin="1.5dp"
                        android:textSize="15dp"
                        android:textColor="@color/mainColor"
                        android:background="@color/bgColor"
                        android:gravity="center_vertical"
                        android:text="필수사항"/>
                    <TextView
                        android:id="@+id/spMust"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp"
                        android:textSize="15dp"
                        android:textColor="@color/mainColor"
                        android:gravity="center_vertical"
                        android:text="" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/event_box"
                    android:padding="0dp"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp"
                        android:layout_margin="1.5dp"
                        android:textSize="15dp"
                        android:textColor="@color/mainColor"
                        android:background="@color/bgColor"
                        android:gravity="center_vertical"
                        android:text="우대사항"/>
                    <TextView
                        android:id="@+id/spOption"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp"
                        android:textSize="15dp"
                        android:textColor="@color/mainColor"
                        android:gravity="center_vertical"
                        android:text="" />
                </LinearLayout>

                //연관 채용공고 살펴보기
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/title_fav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="연관 채용공고 살펴보기"
                        android:textSize="17dp"
                        android:textColor="@color/mainColor"
                        android:textStyle="bold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/event_box"
                    android:padding="0dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="12dp"
                        android:textSize="15dp"
                        android:textColor="@color/mainColor"
                        android:gravity="center_vertical"
                        android:text="-학점" />
                </LinearLayout>

                //댓글
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="댓글"
                        android:textSize="17dp"
                        android:textColor="@color/mainColor"
                        android:textStyle="bold"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/commentInput"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textMultiLine" />
                <Button
                    android:id="@+id/cmtSendBtn"
                    android:layout_width="75dp"
                    android:layout_height="31dp"
                    android:layout_gravity="end"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/selected_button"
                    android:text="글쓰기"
                    android:textColor="#ffffff"
                    android:textSize="15dp"/>

                //댓글 없을 때
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:background="@drawable/event_box"
                    android:padding="12dp"
                    android:layout_marginBottom="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:padding="20dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="15dp"
                            android:textColor="@color/mainColor"
                            android:textStyle="bold"
                            android:text="댓글이 없습니다!"
                            android:gravity="center_horizontal|center_vertical"/>
                    </LinearLayout>
                </LinearLayout>



            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>