<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            //공고 기본 정보
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/event_box"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:id="@+id/spEventTitle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="@color/mainColor"
                    android:textSize="17dp"
                    android:textStyle="bold" />

                <ToggleButton
                    android:id="@+id/scrapBtn2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="3dp"
                    android:background="@drawable/unstar"
                    android:textColor="@color/mainColor"
                    android:textOff=""
                    android:textOn="" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/event_box"
                android:orientation="horizontal"
                android:padding="0dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1.5dp"
                    android:layout_marginLeft="1.5dp"
                    android:layout_weight="2"
                    android:background="@drawable/gray_box"
                    android:gravity="center_horizontal|center_vertical"
                    android:padding="12dp"
                    android:text="회사명"
                    android:textColor="@color/mainColor"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/spEventCompany"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1.5dp"
                    android:layout_marginRight="1.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_box"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:text=""
                    android:textColor="@color/mainColor"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/event_box"
                android:orientation="horizontal"
                android:padding="0dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1.5dp"
                    android:layout_marginLeft="1.5dp"
                    android:layout_weight="2"
                    android:background="@drawable/gray_box"
                    android:gravity="center_horizontal|center_vertical"
                    android:padding="12dp"
                    android:text="산업군"
                    android:textColor="@color/mainColor"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/spEventCate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1.5dp"
                    android:layout_marginRight="1.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_box"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:text=""
                    android:textColor="@color/mainColor"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/event_box"
                android:orientation="horizontal"
                android:padding="0dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1.5dp"
                    android:layout_marginLeft="1.5dp"
                    android:layout_weight="2"
                    android:background="@drawable/gray_box"
                    android:gravity="center_horizontal|center_vertical"
                    android:padding="12dp"
                    android:text="장소 및 일시"
                    android:textColor="@color/mainColor"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/spEventInfo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1.5dp"
                    android:layout_marginRight="1.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_box"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:text=""
                    android:textColor="@color/mainColor"
                    android:textSize="15dp"
                    android:lineSpacingExtra="5dip"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/event_box"
                android:orientation="horizontal"
                android:padding="0dp">

                <TextView
                    android:id="@+id/spEventContent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="1.5dp"
                    android:layout_marginLeft="1.5dp"
                    android:layout_marginRight="1.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/white_box"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:text=""
                    android:textColor="@color/mainColor"
                    android:textSize="15dp"
                    android:lineSpacingExtra="7dip"/>
            </LinearLayout>

            //준비하세요

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title_fav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="준비하세요"
                    android:textColor="@color/mainColor"
                    android:textSize="17dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/event_box"
                android:orientation="vertical"
                android:padding="0dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1.5dp"
                    android:background="@color/bgColor"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:text="필수사항"
                    android:textColor="@color/mainColor"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/spMust"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:text=""
                    android:textColor="@color/mainColor"
                    android:textSize="15dp"
                    android:lineSpacingExtra="7dip"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/event_box"
                android:orientation="vertical"
                android:padding="0dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="1.5dp"
                    android:background="@color/bgColor"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:text="우대사항"
                    android:textColor="@color/mainColor"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/spOption"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:text=""
                    android:textColor="@color/mainColor"
                    android:textSize="15dp"
                    android:lineSpacingExtra="7dip"/>
            </LinearLayout>

            //연관 채용공고 살펴보기

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/title_fav"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="연관 채용공고 살펴보기"
                    android:textColor="@color/mainColor"
                    android:textSize="17dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/event_box"
                android:orientation="vertical"
                android:padding="0dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="12dp"
                    android:text="연관 채용공고가 없습니다!"
                    android:textColor="@color/mainColor"
                    android:textSize="15dp" />
            </LinearLayout>

            //댓글

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="댓글"
                    android:textColor="@color/mainColor"
                    android:textSize="17dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <EditText
                android:id="@+id/commentInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="5"
                android:inputType="textMultiLine"
                android:background="@drawable/button"
                android:padding="12dp"
                android:layout_marginBottom="5dp"
                android:gravity="top|left"
                android:hint="댓글을 입력해주세요"
                android:textSize="15dp"
                android:textColor="@color/mainColor"/>

            <Button
                android:id="@+id/cmtSendBtn"
                android:layout_width="75dp"
                android:layout_height="31dp"
                android:layout_gravity="end"
                android:layout_marginBottom="10dp"
                android:background="@drawable/selected_button"
                android:text="글쓰기"
                android:textColor="#ffffff"
                android:textSize="15dp" />

            //댓글 없을 때

            <LinearLayout
                android:id="@+id/noCommentMsg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:background="@drawable/event_box"
                android:orientation="horizontal"
                android:padding="12dp"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal|center_vertical"
                        android:text="댓글이 없습니다!"
                        android:textColor="@color/mainColor"
                        android:textSize="15dp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

    </ScrollView>
</LinearLayout>