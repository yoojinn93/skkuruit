<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.androidtown.skkuruit.MainActivity">
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="frame 바꾸기 test"
        android:onClick="change"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        //loading page
        <LinearLayout
            android:id="@+id/loadView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="invisible">
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.80"
                app:srcCompat="@mipmap/ic_launcher" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="50dp"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:hint="닉네임을 입력해주세요!" />

                    <Button
                        android:id="@+id/nickCheckBtn"
                        android:layout_width="75dp"
                        android:layout_height="31dp"
                        android:background="#333333"
                        android:text="check"
                        android:textColor="#ffffff"
                        android:textSize="15dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/nickDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.12"
                    android:text="닉네임은 최초 한번만 설정 가능합니다"
                    android:textSize="15dp"
                    android:textStyle="italic"
                    android:textColor="#484848"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    tools:layout_editor_absoluteX="142dp"
                    tools:layout_editor_absoluteY="204dp" />

                <Button
                    android:id="@+id/startBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#333333"
                    android:text="시작하기"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:onClick="initStart"/>
            </LinearLayout>
        </LinearLayout>

        //main page
        <LinearLayout
            android:id="@+id/mainView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="invisible">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp">

                    <TextView
                        android:id="@+id/title_fav"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="나의 맞춤 공고"
                        android:textSize="17dp"
                        android:textColor="#484848"
                        android:textStyle="bold"/>

                    <Button
                        android:id="@+id/favSettingBtn"
                        android:layout_width="69dp"
                        android:layout_height="27dp"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/button"
                        android:onClick="favoriteSetting"
                        android:text="설정하기"
                        android:textColor="#484848"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/show_fav_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="더 보기 >"
                        android:textSize="17dp"
                        android:textColor="#484848"
                        android:textStyle="bold"
                        android:gravity="right"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/event_box">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="회사명" />

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="날짜" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="6"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="wrap_content"
                                android:layout_height="44dp"
                                android:layout_weight="3.00"
                                app:srcCompat="@android:drawable/btn_star_big_off" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/title_all"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="전체 공고"
                        android:textSize="17dp"
                        android:textColor="#484848"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/show_all_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="더 보기 >"
                        android:textSize="17dp"
                        android:textColor="#484848"
                        android:textStyle="bold"
                        android:gravity="right"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        //관심기업,산업군 설정 page
        <LinearLayout
            android:id="@+id/favoriteView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="invisible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="5dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="나의 관심 기업/산업군을 기반으로\n 채용 푸쉬 알림을 보내드립니다\n 알림 설정은 마이페이지에서 가능합니다"
                    android:textColor="#484848"
                    android:textSize="17dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
